<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
	<!-- Bundle identity -->
	<key>CFBundleIdentifier</key>
	<string>$(PRODUCT_BUNDLE_IDENTIFIER)</string>
	<key>CFBundleExecutable</key>
	<string>$(EXECUTABLE_NAME)</string>
	<key>CFBundleName</key>
	<string>Side Quests</string>
	<key>CFBundleDisplayName</key>
	<string>Side Quests</string>
	<key>CFBundlePackageType</key>
	<string>$(PRODUCT_BUNDLE_PACKAGE_TYPE)</string>

	<!-- Versioning -->
	<key>CFBundleShortVersionString</key>
	<string>$(MARKETING_VERSION)</string>
	<key>CFBundleVersion</key>
	<string>$(CURRENT_PROJECT_VERSION)</string>

	<!-- macOS minimum version -->
	<key>LSMinimumSystemVersion</key>
	<string>$(MACOSX_DEPLOYMENT_TARGET)</string>

	<!-- Hide from Dock â€” this is the critical key for a menu bar agent -->
	<key>LSUIElement</key>
	<true/>

	<!-- NSApplication principal class -->
	<key>NSPrincipalClass</key>
	<string>NSApplication</string>

	<!-- Allow HTTPS calls to any host (Discord webhook) -->
	<key>NSAppTransportSecurity</key>
	<dict>
		<key>NSAllowsArbitraryLoads</key>
		<true/>
	</dict>

	<!-- Shared secret for sq-server, injected at build time -->
	<key>SQ_SERVER_SECRET</key>
	<string>$(SQ_SERVER_SECRET)</string>
</dict>
</plist>
